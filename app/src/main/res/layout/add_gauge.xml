    <!-- Gauge End Value -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/gauge_min_value_select"
            android:layout_weight="1"
            android:textSize="15dp"
            android:paddingLeft="20dp"/>
        <EditText
            android:id="@+id/gauge_min_value_select"
            android:inputType="number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="15dp"
            android:layout_marginLeft="75dp"/>
    </LinearLayout>

    <!-- Gauge End Value -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/gauge_max_value_select"
            android:layout_weight="1"
            android:textSize="15dp"
            android:paddingLeft="20dp"/>
        <EditText
            android:id="@+id/gauge_max_value_select"
            android:inputType="number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="15dp"
            android:layout_marginLeft="75dp"/>
    </LinearLayout>

    <!-- Gauge Number of Nicks -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/gauge_ticks_select"
            android:layout_weight="1"
            android:textSize="15dp"
            android:paddingLeft="20dp"/>
        <EditText
            android:id="@+id/gauge_ticks_select"
            android:inputType="number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="15dp"
            android:layout_marginLeft="75dp"/>
    </LinearLayout>

</LinearLayout>