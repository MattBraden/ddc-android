<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.teamabc.digitaldynamiccluster.AboutActivity">

    <TextView
        android:id="@+id/about_title"
        android:text="@string/app_name"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>


    <TextView
        android:id="@+id/about_description"
        android:text="@string/about_description"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_title"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:id="@+id/about_contributors_title"
        android:text="@string/about_contributors_title"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_description"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/about_contributors"
        android:text="@string/about_contributors"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_contributors_title" />
</RelativeLayout>
